                        setSaveInActive();
                        currentNode = item.id;
                        refreshPreviewVersion(version);
                    },
                    error: function (xhr, status, err) {
                        console.error(url, status, err.toString());
                    }
                });
            } else if (item.id === '3_F') {
                $.ajax({
                    type: "GET",
                    url: url,
                    cache: false,
                    dataType: "json",
                    success: function (version) {
