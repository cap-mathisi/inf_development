            var refreshNodeId = (insertType == 0) ? data.parentId : currentNode;
            var itemCount = $("#numCount").data("kendoNumericTextBox").value();
            var type = $('.itemActionMenu .subMenu .nodeType.active').attr('data-id');
            var url = "../SSPxItem/" + currentNode + "/insert?insertType=" + insertType + "&itemTypeKey=" + type + "&itemCount=" + itemCount;
            $.ajax({
                type: "GET",
                url: url,
                cache: false,
                dataType: "json",
                success: function (result) {
                    console.log(result);
                    refreshNode(refreshNodeId, true);
                    $('.itemActionMenu').hide();
                },
