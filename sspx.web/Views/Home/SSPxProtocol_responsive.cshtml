        function retrieveNode(item) {
            var url = "../SSPxVersion/" + currentProtocol;
            var sameType = (currentNode.indexOf("_I") > 0 && item.id.indexOf("_I") > 0);
            if (!sameType) {
                $('#col2 .contentArea .contentPanel').hide();
