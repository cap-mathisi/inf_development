                $.ajax({
                    type: "GET",
                    url: url,
                    cache: false,
                    dataType: "json",
                    success: function (version) {
                        if (version.title) {
                            $('.contentArea .subHeader #text').html('Title');
                            $('.contentArea #protocolName').val(version.protocolName);
