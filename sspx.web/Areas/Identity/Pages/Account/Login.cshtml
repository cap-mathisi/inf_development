@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <partial name="_StylesScriptsPartial" />
    <link rel="stylesheet" href="~/css/sspx/identity.css?v=20190116">
    <partial name="_StyleOverridesLinkLast" />
</head>
<body id="loginBody">
    @*
        TODO: if we want cookie consent popup, uncomment and get this to show up correctly (right now it's a weird small button)
        <partial name="_CookieConsentPartial" />
    *@
    <div class="container-fluid">

        <div class="text-center my-4">
            <img id="capLogo" alt="CAP Logo" src="~/images/CAP_logo_rgb.png">
        </div>
        <div>
            <div class="row">
                <div class="col"></div>
                <div class="col-sm-10" style="max-width:550px">
                    <section>
                        <div class="bg-light">
                            <form method="post" id="loginForm">
                                <h5 class="text-secondary text-center p-4">Log in to Single Source Product (SSP)</h5>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row mx-0">
                                    <label asp-for="Input.UserName" class="col-sm-3 col-form-label font-weight-bold text-sm-right" style="font-size:0.8em"></label>
                                    <input asp-for="Input.UserName" class="col-sm-8 form-control mx-4 mx-sm-0" />
                                </div>
                                <div class="form-group row mx-0">
                                    <label asp-for="Input.Password" class="col-sm-3 col-form-label font-weight-bold text-sm-right"  style="font-size:0.8em"></label>
                                    <input asp-for="Input.Password" class="col-sm-8 form-control mx-4 mx-sm-0" />
                                </div>
                                <div class="form-group row mx-0 mt-3">
                                    <div class="col-sm-1"></div>
                                    <button type="submit" class="btn btn-primary btn-block col-sm-10 mx-4 mx-sm-0">LOG IN &#12299;</button>
                                    <div class="col-sm-1"></div>
                                </div>
                                <div class="text-secondary text-center mt-4">
                                    <small class="d-none d-sm-inline">.................................</small>
                                    <small>Don't have an SSP account?</small>
                                    <small class="d-none d-sm-inline">.................................</small>
                                </div>
                                <h6 class="text-center mt-3 pb-4"><a asp-area="Identity" asp-page="/Account/RequestOnlineAccess">Request Online Access</a></h6>
                            </form>
                        </div>
                        <div class="text-center">
                            <h5 class="text-secondary mt-4 mb-3">Forgot your SSP password?</h5>
                            <small>
                                <span class="pr-2">
                                    <a asp-area="Identity" asp-page="ResetPassword">Reset Password</a>
                                </span>
                                <span>|</span>
                                <span class="pl-2">
                                    Contact CAP at <a href="mailto:capecc@cap.org">capecc@cap.org</a> or call at 847-832-7700
                                </span>
                            </small>
                        </div>
                    </section>
                </div>
                <div class="col"></div>
            </div>
        </div>

    </div>
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            sessionStorage.clear();
        });
    </script>
</body>
</html>