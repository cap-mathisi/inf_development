@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@if (string.IsNullOrWhiteSpace(Model.ErrorMessage) == false)
{
    <p class="text-danger">@Model.ErrorMessage</p>
}

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-3 text-sm-right">
            <span class="text-danger mt-1">*</span>
            <label asp-for="Input.UserName" class="col-form-label font-weight-bold"></label>
        </div>
        <div class="col-sm-6">
            <input asp-for="Input.UserName" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 text-sm-right"></div>
        <div class="col-sm-9">
            <small class="text-muted">Password reset instructions will be sent to your registered email address.</small>
        </div>
    </div>
    <div class="form-group row mt-4">
        <div class="col-sm-3 text-sm-right"></div>
        <div class="col-sm-6">
            <button type="submit" class="btn btn-default btn-primary">Submit</button>
            <a asp-area="Identity" asp-page="Login" class="text-center ml-4 mt-1">Cancel</a>
        </div>
    </div>
</form>

@section BottomScripts {
    <partial name="_ValidationScriptsPartial" />
}
